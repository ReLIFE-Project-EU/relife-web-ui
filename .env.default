# Development API URL (used by Vite proxy)
VITE_API_URL=http://localhost:8080

# URL of the Supabase instance
VITE_SUPABASE_URL=https://relife-supabase.test.ctic.es/
# Backend service compatibility
SUPABASE_URL=${VITE_SUPABASE_URL}

# Supabase Anon Key (Public)
VITE_SUPABASE_ANON_KEY=

# Service role key with admin privileges (NOT FOR CLIENT USE)
SUPABASE_KEY=

# Client ID for the application in Keycloak
VITE_KEYCLOAK_CLIENT_ID=relife-service
# Backend service compatibility
KEYCLOAK_CLIENT_ID=${VITE_KEYCLOAK_CLIENT_ID}

# Client secret for the application in Keycloak (NOT FOR CLIENT USE)
KEYCLOAK_CLIENT_SECRET=

# Base URL of the Keycloak realm for authentication
# Frontend needs base URL + Realm separately
VITE_KEYCLOAK_URL=https://relife-identity.test.ctic.es
VITE_KEYCLOAK_REALM=relife

# Backend services expect the full realm URL
KEYCLOAK_REALM_URL=${VITE_KEYCLOAK_URL}/realms/${VITE_KEYCLOAK_REALM}

# Name of the admin role used for permission checks
ADMIN_ROLE_NAME=relife_admin

# Name of the default storage bucket in Supabase
BUCKET_NAME=default_relife_bucket

# Host port of the Caddy server
HOST_PORT_CADDY=8080

# Image tags for the ReLIFE services from the GitHub Container Registry
IMAGE_TAG_FINANCIAL=main
IMAGE_TAG_FORECASTING=main
IMAGE_TAG_TECHNICAL=main
