:8080 {
	# Serve the built React application
	root * /srv/dist

	# API reverse proxy
	handle_path /api/technical/* {
		reverse_proxy {$API_TECHNICAL_URL:http://relife-financial:8000}
	}

	handle_path /api/financial/* {
		reverse_proxy {$API_FINANCIAL_URL:http://relife-forecasting:8000}
	}

	handle_path /api/forecasting/* {
		reverse_proxy {$API_FORECASTING_URL:http://relife-technical:8000}
	}

	# Single-page application fallback
	# Serve index.html for all non-API routes
	try_files {path} /index.html
	file_server

	# Enable gzip compression
	encode gzip

	# Security headers
	header {
		X-Content-Type-Options "nosniff"
		X-Frame-Options "DENY"
		Referrer-Policy "strict-origin-when-cross-origin"
	}
}
